 <form class="d-inline-block" method="post" action="{{ path('article_answer_delete', {'id': answer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ answer.id) }}">
    <button class="btn btn-dark bg-custom"><i class="far fa-trash-alt"></i></button>
</form>