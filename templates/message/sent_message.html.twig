{% extends 'message/message_layout.html.twig' %}

{% block title %}Message envoyé Chess-Online{% endblock %}

{% block messagerie %}

{{ parent() }}
        <h1 class="font-custom"> Message envoyé</h1>
            <div class="pr-2 mb-1"><a class="btn btn-dark float-right" href="{{ path('message_new') }}">Envoyer un Message</a></div>
            <ul class="list-group list-group-flush">
            {% for message in messages %}
                <li class="list-group-item bg-custom borderblanche m-1">
                    <div class="d-flex justify-content-between">
                        <h3><a href="{{ path('message_show', {'id': message.id}) }}">{{ message.title }}</a></h3>
                        {% if message.readByReceiver == true %} <i class="far fa-envelope-open fa-2x"></i> {% else %} <i class="far fa-envelope fa-2x"></i> {% endif %}
                    </div>
                    <div>
                        <span><a href="{{ path('profileShow',{ id : message.receiver.id})}}">{{message.receiver}}</a></span>
                        <span class="float-right">{{ message.sentAt ? message.sentAt|date('d/m/Y, H:i') : '' }}</span>
                    </div>
                    
            </li>                                
            {% else %}      
                    <p>Aucun message envoyé</p>         
            {% endfor %}
            </ul>
            {{ knp_pagination_render(messages , null, {}, {
                    'align': 'center',
                    }) }}
        </div>
                  
{% endblock %}
